{
  "title": "mapInfoParams",
  "type": "object",
  "description": "YAMLデータ",
  "examples": [
    {
      "resolution": 0.1,
      "origin": {
        "x": -200,
        "y": -200
      },
      "negate": false,
      "occupied_thresh": 0.65,
      "free_thresh": 0.196,
      "size": {
        "width": 4000,
        "height": 4000
      }
    }
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "エンドユーザにとってのマップの名前"
    },
    "description": {
      "type": "string",
      "description": "このマップの説明。どこで使うかはわからないがとりあえず設定した。"
    },
    "resolution": {
      "type": "number",
      "description": "PGMマップの解像度。ロボットが使う"
    },
    "origin": {
      "$ref": "./common/point2d.v1.json"
    },
    "negate": {
      "type": "boolean",
      "default": false,
      "description": "pgmのデータを白黒反転するかどうか。trueで反転"
    },
    "occupied_thresh": {
      "type": "number",
      "description": "0~1の数。ROSで壁判定に使う",
      "format": "float",
      "minimum": 0,
      "maximum": 1
    },
    "free_thresh": {
      "type": "number",
      "description": "0~1の数。ROSでロボットが通れる場所判定に使う。",
      "format": "float",
      "minimum": 0,
      "maximum": 1
    },
    "size": {
      "$ref": "./common/size2d.v1.json"
    },
    "owner": {
      "$ref": "./owner.v1.json"
    }
  },
  "required": [
    "name",
    "resolution",
    "origin",
    "negate",
    "occupied_thresh",
    "free_thresh",
    "size"
  ]
}